<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/movie_margin_left"
    android:layout_marginTop="@dimen/movie_margin_top"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_movie_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/tv_movie_genre_margin_right"
        android:background="@color/light_blue"
        android:paddingLeft="@dimen/tv_movie_genre_padding"
        android:paddingRight="@dimen/tv_movie_genre_padding"
        android:text="Drama"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/tv_information_text_size" />

    <View
        android:layout_width="@dimen/divider_width"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

</LinearLayout>